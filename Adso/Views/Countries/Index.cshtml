@model IEnumerable<Country>

@{
    ViewData["Title"] = "Countries";
}

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Organization</li>
    <li class="breadcrumb-item active">Working regions</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">Working regions - Countries</h1>
    <div class="subheader-block"></div>
</div>

<div class="col-xl-6">
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="m-0">Countries</h3>
            <div>
                <a type="button" class="btn btn-primary btn-sm" asp-action="Create">Add new</a>
            </div>
        </div>
        <div class="card-body">
            <div class="input-group bg-white">
                <form asp-controller="Countries" asp-action="Index">
                        <input type="text" name="SearchString" class="form-control border-left-0 bg-transparent pl-0" placeholder="Search">
                       <br /> <input type="submit" value="Search" />  
                </form>
            </div>
            <table id="countries-table" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShortName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Currency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CallingCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CallingCode)
                            </td>
                            <td>
                                <span class="badge badge-success">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>